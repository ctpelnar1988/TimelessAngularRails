
  <div class="container-fluid">
    <div class="row text-center">
      <div class="col-xs-12">
        <h3 class="admin_login_heading default_headers">Admin Login</h3>
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
        <%= form_tag(:action => "attempt_login") do %>
        <%= label_tag(:email, nil, :class => "admin_login_default_label") %>
        <br>
        <%= text_field_tag(:email, nil, :class => "admin_login_default_input", :placeholder => " Email", :autofocus => true) %>
        <br>
        <%= label_tag(:password, nil, :class => "admin_login_default_label") %>
        <br>
        <%= password_field_tag(:password, nil, :class => "admin_login_default_input", :placeholder => " Password" ) %>
        <br>
        <br>
        <%= submit_tag('Login', :class => "admin_login_submit")%>
        <br>
        <br>
        <br>
        <% end %>
        </div>
      </div>
    </div>
  </div>