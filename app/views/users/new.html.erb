<div class="container-fluid">
  <div class="row text-center">
    <div class="col-xs-1 col-sm-2 col-md-2"></div>
    <div class="col-xs-10 col-sm-8 col-md-8">
      <h1 class="blog_signup_header">Sign Up</h1>
      <%= form_for @user do |f| %>
      <%= f.label :email, :class => "default_blog_signup_label" %>
      <br>
      <%= f.text_field :email, :required => true, :placeholder => " Email", :class => "default_blog_signup_input", :autofocus => true %>
      <br>
      <%= f.label :password, :class => "default_blog_signup_label" %>
      <br>
      <%= f.password_field :password, :required => true, :placeholder => " Password", :class => "default_blog_signup_input" %>
      <br>
      <%= f.label :confirm_password, :class => "default_blog_signup_label" %>
      <br>
      <%= f.password_field :password_confirmation, :required => true, :placeholder => " Confirm Password", :class => "default_blog_signup_input" %>
      <br>
      <%= f.label :prove_youre_not_a_robot, :class => "default_blog_signup_label" %>
      <br>
      <%= f.text_field :captcha, :required => true, :placeholder => "#{@a} + #{@b} = ?", :class => "default_blog_signup_input" %>
      <br>
      <br>
      <%= f.submit("Submit", :class => "blog_signup_submit")%>
      <% end %>
    </div>
  </div>
</div>
